<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:onClick="player1OnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_weight="1"
        android:height="250sp"
        android:background="@drawable/running_clock_background"
        android:elevation="5sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:rotation="180"
        android:text="@string/player1"
        android:textColor="@color/black"
        android:textSize="65sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30sp"
        android:gravity="left"
        android:rotation="180"
        android:text="Moves: 00"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:gravity="center"

        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            app:srcCompat="@drawable/setting_icon"
            android:onClick="settingOnClick"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:visibility="invisible"
            app:srcCompat="@drawable/pause_icon"
            tools:visibility="visible"
            android:onClick="pauseOnClick"
            />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            app:srcCompat="@drawable/reset_icon"
            android:onClick="resetOnClick"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:text="Moves: 00"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"

        />


    <TextView
        android:id="@+id/textView3"
        android:onClick="player2OnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="0sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:height="250sp"
        android:background="@drawable/running_clock_background"
        android:elevation="5sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/player2"
        android:textColor="@color/black"
        android:textSize="65sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="gone"
        android:onClick="onMatchFinish"
        />


</LinearLayout>